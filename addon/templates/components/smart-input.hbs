{{input
  id=inputId
  class=inputClass
  type="text"
  value=inputVal
  focus-in="fill"
  focus-out="unfill"
}}
<label class="input__label input__label--{{style}} {{inputLabelColor}}" for="input-{{elementId}}">
  <span class="input__label-content input__label-content--{{style}}">{{label}}</span>
</label>
